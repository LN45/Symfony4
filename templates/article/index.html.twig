{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>List of Articles</h1>

    <table class="table">
        <thead class="title_list">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.category.name }}</a></td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-6">
            <button type="button" class="btn btn-outline-info button_style"><a href="{{ path('article_new') }}">Create new</a></button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-outline-info button_style"><a href="{{ path('home') }}">Back to home</a></button>
        </div>
    </div>

{% endblock %}
