{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>List of Categories</h1>

    <table class="table">
        <thead class="title_list">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-6">
            <button type="button" class="btn btn-outline-info button_style"><a href="{{ path('category_new') }}">Create new</a></button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-outline-info button_style"><a href="{{ path('home') }}">Back to home</a></button>
        </div>
    </div>


{% endblock %}
