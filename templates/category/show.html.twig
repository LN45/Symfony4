{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-outline-info button_style"><a href="{{ path('category_index') }}">back to list</a></button>

    <button type="button" class="btn btn-outline-info button_style"><a href="{{ path('category_edit', {'id': category.id}) }}">edit</a></button>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
